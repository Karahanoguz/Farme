<h1>Your results</h1>

<div class="main-container">
<div class="card-trip">
<% if @products.first.present? %>
<% @products.each do |product|%>
    <%if product.photo.attached? %>
   <%= cl_image_tag product.photo.key %>
<%end %>
    <div class="card-trip-infos">
    <div>
        <h2> <%= product.name %></h2>
        <p> <%= product.detail %></p>
      </div>
      <h2 class="card-trip-pricing">â‚¬ <%= product.price %></h2>
    </div>
    <%= link_to product.name, product_path(product), class: "card-link" %>
  </div>
<% end %>
<% else %>
  <h3>Sorry, we don't have this product ðŸ˜”</h3>
<% end %>
</div>

<div id="map"
     style="width: 50%; height: 1200px;"
