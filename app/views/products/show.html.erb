<div class="d-flex flex-column justify-content-around">
<h1 class="top-margin d-flex justify-content-center">Product Information</h1>
</div>

<div class="card">
  <% if @product.photo.attached? %>
   <div class="d-flex justify-content-center flex-edit">
     <%= cl_image_tag @product.photo.key %>
    </div>
  <% end %>
  <div>
    <img class="image-resize" src="https://images.unsplash.com/photo-1524835208047-0ed22b4dbc82?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=2958&q=80" alt="">
  </div>
  <div class="d-flex justify-content-center text">
    <div class="d-flex">
      <div>
        <p> NAME: <%= @product.name %></h4>
        <p> CATEGORY: <%= @product.product_category %> </h4>
        <p> SOURCE: <%= @product.location %> </h4>
        <p> DETAILS: <%= @product.detail %> </h4>
        <p> PRICE: â‚¬ <%= @product.price %> </h4>
      </div>
     <!--  <div class="d-flex flex-column justify-content-between">
        <p>Quantity: 0</p>
        <button class="btn btn-primary cart">
          Add
        </button>
        <button class="btn btn-primary cart">
          Remove
        </button>
        <button class="btn btn-primary">
          Order<%#= link_to "Order", order_path(@order_product), class: "btn btn-flat" %>
        </button>
      </div> -->
    </div>
  </div>
  <div>
    <%= simple_form_for [ @product, @order_product ] do |f| %>
      <%= f.input :quantity %>
      <%= f.submit "Please enter quantity", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<hr>

<hr class="my-5">
  <div class="row">
    <div class="col-12 col-sm-6">
      <h3>Reviews</h3>
      <% if @product.reviews.empty? %>
        <small><em class="text-muted">Be the first one to review these products.</em></small>
      <% end %>
      <% @product.reviews.each do |review| %>
        <div>
          <% review.rating.times do %>
            <i class="fas fa-star star-yellow"></i>
          <% end %>
          <small><em class="text-muted"><%= distance_of_time_in_words_to_now(review.created_at) %> ago</em></small>
          <p class="mb-0"><%= review.content %></p>
        </div>
        <hr>
      <% end %>
    </div>



