<div class="container-hero">
  <div class="flex-hero">
    <div class="cta">
      <h1>Do you want to know the farmers around you?</h1>
      <div class="search-bar-container">
        <div class="search-bar-input">
          <%= simple_form_for :search, html: { class: "flexsearch"}, url: products_path, method: :get do |f| %>
          <%= f.input :query, label: false, placeholder: "Find a product" %>
          <%= f.submit "Search" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container-info">
  <div class="flex-card">
    <div class="card-area">
      <%= image_tag "icon_area.png", class:"area" %>
      <h2>Find your area</h2>
    </div>

    <div class="card-area">
      <%= image_tag "icon_products.png", class:"area" %>
      <h2>Choose your product</h2>
    </div>

    <div class="card-area">
      <%= image_tag "icon_door.png", class:"area" %>
      <h2>Open your door</h2>
    </div>

  </div>
</div>
