<div class="d-flex flex-column justify-content-around height">
<h1 class="top-margin d-flex justify-content-center">Order Information</h1>
</div>

<div class="card-boat">
  <% if @order.product.photo.attached? %>
    <div class="d-flex justify-content-center flex-edit">
     <%= cl_image_tag @order.product.photo.key %>
    </div>
  <% end %>

  <div class="d-flex justify-content-center">
    <div class="d-flex flex-column">
      <% @order.order_products.each do |item|%>
      <h4> NAME: <%= item.product.name %></h4>
      <h4> LOCATION: <%= item.product.location %></h4>
      <h4> DETAILS: <%= item.product.detail %></h4>
      <h4> QUANTITY: <%= item.quantity %></h4>
      <h4> TOTAL PRICE: â‚¬ <%= item.product.price * item.quantity %></h4>
      <% end %>
    </div>
  </div>
</div>

<hr>

<%= link_to "Confirm purchase", "#", class: "btn btn-flat" %>



